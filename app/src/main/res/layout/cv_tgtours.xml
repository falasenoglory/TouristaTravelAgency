<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_tgtouritem"
    card_view:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgTourPackageImage"
            android:foregroundGravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Package Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTourPackageName"
            android:layout_below="@+id/imgTourPackageImage"
            android:textStyle="normal|bold"
            android:textSize="14sp" />

        <TextView
            android:text="by Trave Agency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtTourPackageName"
            android:id="@+id/txtTourTravelAgency"
            android:textSize="12sp" />

        <TextView
            android:text="Date of the Tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtTourPackageName"
            android:layout_alignParentEnd="true"
            android:id="@+id/txtTourDate" />

        <TextView
            android:text="Payment of TourGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTourPaymentForTG"
            android:textSize="12sp"
            android:layout_below="@+id/txtTourDate"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</android.support.v7.widget.CardView>