<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    card_view:cardPreventCornerOverlap="false"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:id="@+id/imgItineraryImage"
            android:layout_width="133dp"
            android:layout_height="180dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:id="@+id/txtItineraryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:ellipsize="end"
            android:maxLength="20"
            android:maxLines="1"
            android:textSize="14dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:text="Spot Description"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/imgItineraryImage"
            android:layout_below="@+id/txtItinerarySpotName"
            android:textStyle="normal|italic"
            android:textAlignment="textStart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAge"
            android:layout_below="@+id/txtItineraryDescription"
            android:layout_alignEnd="@+id/txtItineraryDescription"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Spot Name"
            android:layout_alignStart="@+id/imgItineraryImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtItinerarySpotName"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp"
            android:layout_alignEnd="@+id/txtItineraryDescription"
            android:textStyle="normal|bold"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>