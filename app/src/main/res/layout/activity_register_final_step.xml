<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_containerRequest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.touristadev.tourista.activities.RequestActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarL"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <Button
        android:text="Sign up"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnRegister"
        android:background="@drawable/button_accent_fill"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <CheckBox
        android:text="Filipino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="40dp"
        android:id="@+id/chcFilipino"
        android:layout_below="@+id/chcEnglish" />

    <CheckBox
        android:text="English"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginStart="40dp"
        android:layout_marginTop="19dp"
        android:id="@+id/chcEnglish" />

    <CheckBox
        android:text="Chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcChinese"
        android:layout_below="@+id/chcFilipino"
        android:layout_alignStart="@+id/chcFilipino"
        android:layout_marginTop="34dp" />

    <CheckBox
        android:text="Bicolano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcBicolano"
        android:layout_below="@+id/chcFilipino"
        android:layout_alignStart="@+id/chcFilipino" />

    <CheckBox
        android:text="Japanese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcJapanese"
        android:layout_below="@+id/chcChinese"
        android:layout_alignStart="@+id/chcChinese" />

    <CheckBox
        android:text="Korean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcKorean"
        android:layout_alignBaseline="@+id/chcEnglish"
        android:layout_alignBottom="@+id/chcEnglish"
        android:layout_toEndOf="@+id/chcJapanese"
        android:layout_marginStart="56dp" />

    <CheckBox
        android:text="Mandarin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcMandarin"
        android:layout_below="@+id/chcKorean"
        android:layout_alignStart="@+id/chcKorean" />

    <CheckBox
        android:text="Nihonggo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcNihonggo"
        android:layout_below="@+id/chcMandarin"
        android:layout_alignStart="@+id/chcMandarin" />

    <CheckBox
        android:text="Tagalog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcTagalog"
        android:layout_above="@+id/chcJapanese"
        android:layout_alignStart="@+id/chcNihonggo" />

    <CheckBox
        android:text="Waray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chcWaray"
        android:layout_below="@+id/chcTagalog"
        android:layout_alignStart="@+id/chcTagalog" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtZipCode"
        android:hint="ZipCode"
        android:layout_below="@+id/toolbarL"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtProfileDescript"
        android:hint="Profile Description"
        android:layout_below="@+id/txtZipCode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:layout_marginStart="27dp"
        android:layout_below="@+id/txtProfileDescript"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

</RelativeLayout>

